{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/blog", "dest": "/index.html" },
    { "src": "/blog/(.*)", "dest": "/index.html" }
  ],
  "github": {
    "enabled": true,
    "silent": false
  },
  "build": {
    "env": {
      "CACHE_BUST": "2"
    }
  }
} 